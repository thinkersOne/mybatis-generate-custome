<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baomidou.daoExt.RmsDriverDaoExt">
    <sql id="Page_Where">
        <!--
          @mbggenerated
        -->
        <where>
            <if test="1==1">
                1=1
            </if>
            <if test="queryParam.keyword">
              AND (`code` like concat(#{queryParam.keyword},'%')
              or `name` like concat(#{queryParam.keyword},'%')
              or `pin_yin` like concat(#{queryParam.keyword},'%')
              )
            </if>
        </where>
    </sql>

    <select id="getPage" resultType="com.baomidou.entity.RmsDriverEntity">
        select
        rms_driver.*
        from rms_driver
        inner join (select rms_driver.* from rms_driver
        <if test="queryParam!= null">
            <include refid="Page_Where" />
        </if>
        order by rms_driver.id desc limit #{pageParam.offset},#{pageParam.limit} ) as a on a.id=rms_driver.id
        order by  rms_driver.id desc
    </select>
    <select id="getCount" resultType="long">
        select count(*) from rms_driver
        <if test="queryParam!= null">
            <include refid="Page_Where" />
        </if>
    </select>
    <select id="getByWhere" resultType="com.baomidou.entity.RmsDriverEntity">
            select * from rms_driver
                <include refid="Page_Where" />
    </select>

</mapper>
