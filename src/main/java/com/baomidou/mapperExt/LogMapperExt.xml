<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baomidou.mapperExt.LogMapper">
    <sql id="Page_Where">
        <!--
          @mbggenerated
        -->
        <where>
            <if test="1==1">
                1=1
            </if>
            <if test="queryParam.keyword">
              AND (`code` like concat(#{queryParam.keyword},'%')
              or `name` like concat(#{queryParam.keyword},'%')
              or `pin_yin` like concat(#{queryParam.keyword},'%')
              )
            </if>
        </where>
    </sql>

    <select id="getPage" resultType="com.baomidou.entity.LogEntity">
        select
        user_log.*
        from user_log
        inner join (select user_log.* from user_log
        <if test="queryParam!= null">
            <include refid="Page_Where" />
        </if>
        order by user_log.id desc limit #{pageParam.offset},#{pageParam.limit} ) as a on a.id=user_log.id
        order by  user_log.id desc
    </select>
    <select id="getCount" resultType="long">
        select count(*) from user_log
        <if test="queryParam!= null">
            <include refid="Page_Where" />
        </if>
    </select>
    <select id="getByWhere" resultType="com.baomidou.entity.Log">
            select * from user_log
                <include refid="Page_Where" />
    </select>

</mapper>
